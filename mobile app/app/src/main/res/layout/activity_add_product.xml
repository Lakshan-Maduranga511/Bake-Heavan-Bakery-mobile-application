<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIPackage.AddProductActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/price_colour"
            android:text=" Back"
            android:clickable="true"
            android:focusable="true"
            android:onClick="BackClick" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:text="Create a new  product"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:fontFamily="@font/gil"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="Please enter below information to create new product"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Product ID:" />

        <EditText
            android:id="@+id/txt_I_PID"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Product Name:" />

        <EditText
            android:id="@+id/txt_I_PName"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Category:" />

        <Spinner
            android:id="@+id/spn_I_AddCategory"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Price:" />

        <EditText
            android:id="@+id/txt_I_PPrice"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter sensory words:" />

        <EditText
            android:id="@+id/txt_I_PDescription"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Quantity:" />

        <EditText
            android:id="@+id/txt_I_PQ"
            android:layout_marginStart="25dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_I_Product"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="7dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>