<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIPackage.LoginActivity"
    android:background="@drawable/newcupcake">

    <LinearLayout

        android:id="@+id/loginWrapper"
        android:layout_width="340dp"
        android:layout_height="410dp"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"

            android:fontFamily="@font/gil"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="commen get the bite,Please login your account for check and balance"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_L_Username"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:ems="10"
            android:textSize="16dp"
            android:hint="Enter Your Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/txt_L_Password"
            android:layout_width="248dp"
            android:layout_height="44dp"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="40dp"
            android:background="@color/white"
            android:ems="10"
            android:textSize="16dp"
            android:hint="Enter Your Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_L_Login"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/btn_bg"
            android:text="Login"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:textColor="@color/price_colour"
            android:text="Don't have an account? Click here to register."
            android:textAlignment="center"
            android:textStyle="bold"

            android:clickable="true"
            android:focusable="true"
            android:onClick="onRegisterClick" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

