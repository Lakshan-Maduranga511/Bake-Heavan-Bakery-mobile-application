<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIPackage.ManageCatageryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/price_colour"
            android:text=" Back"
            android:clickable="true"
            android:focusable="true"
            android:onClick="BackClick" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/gil"
            android:text="Delete category"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:text="Please enter below information to delete category"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView10"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category:" />

        <Spinner
            android:id="@+id/spn_M_Category"
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_M_Delete"
            android:layout_marginLeft="30dp"

            android:layout_marginRight="30dp"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />
        <TextView
            android:id="@+id/textView39"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:text="Edit category"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:fontFamily="@font/gil"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:text="Please enter below information to edit category"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category:" />

        <Spinner
            android:id="@+id/spn_M_Category2"
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView12"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter New Category Name:" />

        <EditText
            android:id="@+id/txt_M_NewCategoryName"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_M_Edit"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>