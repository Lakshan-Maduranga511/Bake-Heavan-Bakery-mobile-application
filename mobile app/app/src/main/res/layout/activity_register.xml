<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIPackage.RegisterActivity"
    android:background="@drawable/newcupcake"
    >

    <LinearLayout
        android:id="@+id/loginWrapper"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/price_colour"
            android:text=" Back"
            android:clickable="true"
            android:focusable="true"
            android:onClick="BackClick" />



        <TextView
            android:id="@+id/textView34"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"

            android:text="Register"
            android:fontFamily="@font/gil"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="Please enter below information to create new category"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_Username"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:ems="10"
            android:textSize="16dp"
            android:hint="Enter Your Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/txt_Password"
            android:layout_width="248dp"
            android:layout_height="44dp"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:ems="10"
            android:textSize="16dp"
            android:hint="Enter Your Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/txt_ConfirmPassword"
            android:layout_width="248dp"
            android:layout_height="44dp"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:ems="10"
            android:textSize="16dp"
            android:hint="Enter Confirm Password "
            android:inputType="textPassword" />

        <Button
            android:id="@+id/Register"
            android:layout_width="220dp"
            android:layout_height="45dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/btn_bg"
            android:text="Submit"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>