<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/usermenubackground2"
    tools:context=".UIPackage.AdminMenuActivity"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="152dp"

        android:layout_marginBottom="62dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"

        />



    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/gil"
        android:layout_marginBottom="60dp"
        android:text="Explore our menu and satisfy your cravings"
        android:textColor="@color/cream"
        android:textSize="18dp"
        android:textStyle="bold"
       />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="450dp"
        android:layout_below="@id/title_view"
        android:gravity="center"
        android:orientation="vertical">

        <!-- First CardView Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add Category CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginStart="120dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/ViewCategory"
                    android:layout_width="28dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="View Categories and Products"
                    android:textAlignment="center"
                    android:textColor="@color/chocolate_brown"
                    android:textSize="10sp" />
                <!-- Add Category ImageView and TextView -->

            </androidx.cardview.widget.CardView>

            <!-- Add Product CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_marginStart="120dp"
                android:layout_height="100dp"

                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/PlaceOrder"
                    android:layout_width="28dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="Place Order"
                    android:textAlignment="center"
                    android:textColor="@color/chocolate_brown"

                    android:textSize="10sp" />
                <!-- Add Product ImageView and TextView -->

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Second CardView Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Manage Category CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginStart="120dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/vieworder"
                    android:layout_width="28dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/checkout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Orders"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/chocolate_brown"
                    android:textSize="10sp"

                    android:layout_gravity="center" />
                <!-- Manage Category ImageView and TextView -->

            </androidx.cardview.widget.CardView>

            <!-- Manage Product CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:layout_marginStart="120dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="28dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/logout_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/chocolate_brown"
                    android:textSize="10sp"

                    android:layout_gravity="center" />
                <!-- Manage Product ImageView and TextView -->

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


