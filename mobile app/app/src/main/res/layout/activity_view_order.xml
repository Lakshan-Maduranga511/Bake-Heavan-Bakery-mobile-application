<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIPackage.ViewOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:orientation="vertical">
        <TextView
            android:id="@+id/Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/price_colour"
            android:text=" Back"
            android:clickable="true"
            android:focusable="true"
             />
        <TextView
            android:id="@+id/textView35"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="90dp"
            android:text="Check your order details"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:fontFamily="@font/gil"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:text="Please enter below information to check orders"
            android:textAlignment="center"
            android:textStyle="bold" />
        <TextView
            android:layout_marginStart="28dp"
            android:id="@+id/textView4"
            android:layout_marginTop="50dp"
            android:text="Enter oder ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />

        <EditText
            android:id="@+id/TXT_D_OID"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            />

        <Button
            android:id="@+id/btn_D_Submit"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="25dp"

            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>